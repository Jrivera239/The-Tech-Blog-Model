<div class="content">

    {{#if posts.length}}

     <section class="dashboard">
        
        <h2>Your Posts</h2>
             <ul>

            {{#each posts as |post|}}

            <li>
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">{{post.title}} 
                <span>{{format_date post.created_at}}</span></a>
            </li>

            {{/each}}

        </ul>
     </section>

      {{/if}}

    <section class="add-post">
      <a href="/dashboard/addpost"> Create Post</a>
    </section>

</div>