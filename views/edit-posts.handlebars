<div class="content">
    <article class="edit-post">
        <a href="/dashboard"> Dashboard</a>
        <h1>Edit post</h1>
        <form class="edit-post">
            <div>
                <label for="post-title">Title</label>
                <input name="post-title" type="text" value="{{post.title}}"/>
            </div>

            <div>
                <label for="post-text">Post</label>
                <textarea name="post-text">{{post.post_text}}</textarea>
            </div>

            <button type="submit">Save</button>
            <button type="button" class="secondary-btn"> Delete</button>
        </form>
    </article>

</div>

    <form class="comment-form">
        <div>
            <textarea name="comment-body" placeholder="Comment"></textarea>
        </div>
        <div>
            <button type="submit">Comment</button>
        </div>
    </form>

    <h3 class="comment">
        {{post.comments.length}} 
        {{format_plural "comment" post.comments.length}}
    </h3>

    {{> comments post.comments}}

<script src="/js/comment.js"></script>
<script src="/js/edit-post.js"></script>
<script src="/js/remove-posts.js"></script>
